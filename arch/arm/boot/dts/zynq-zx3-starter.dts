/dts-v1/;

/ {
	model = "Enclustra MARS ZX3";
	compatible = "xlnx,zynq-zc770";
	#address-cells = <0x1>;
	#size-cells = <0x1>;
	interrupt-parent = <&gic>;

	memory {
		device_type = "memory";
		reg = <0x0 0x10000000>; /* 256 MB */
	};

	chosen {
		linux,stdout-path = "@uart1";
	};
	
	soc {
		compatible = "xlnx,zynq";
		clock-frequency = <33333333>;
	};

	amba@0 {
		compatible = "simple-bus";
		#address-cells = <0x1>;
		#size-cells = <0x1>;
		ranges;

		gic: intc@f8f01000 {
			interrupt-controller;
			compatible = "arm,cortex-a9-gic";
			#interrupt-cells = <3>;
			reg = < 0xf8f01000 0x1000 >,
			      < 0xf8f00100 0x0100 >;
		};

		pl310@f8f02000 {
			compatible = "arm,pl310-cache";
			cache-unified;
			cache-level = <0x2>;
			reg = <0xf8f02000 0x1000>;
			arm,data-latency = <0x3 0x2 0x2>;
			arm,tag-latency = <0x2 0x2 0x2>;
			interrupts = <0x0 0x22 0x4>;
		};

		uart1: uart@e0001000 {
			compatible = "xlnx,ps7-uart-1.00.a";
			reg = <0xe0001000 0x1000>;
			interrupts = <0x0 0x32 0x0>;
			interrupt-parent = <&gic>;
			clock = <0x5f5e100>;
		};
		
		timer@0xf8001000 {
			compatible = "xlnx,ps7-ttc-1.00.a";
			reg = <0xf8001000 0x1000>;
			interrupts = <0x0 0xa 0x0 0x0 0xb 0x0 0x0 0xc 0x0>;
			interrupt-parent = <&gic>;
			clock-frequency-timer0 = <0x69f6bc7>;
			clock-frequency-timer1 = <0x69f6bc7>;
			clock-frequency-timer2 = <0x69f6bc7>;
		};

		swdt@f8005000 {
			device_type = "watchdog";
			compatible = "xlnx,ps7-wdt-1.00.a";
			reg = <0xf8005000 0x100>;
			clock-frequency = <0x69f6bc7>;
		};

		eth0: eth@e000b000 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "xlnx,ps7-ethernet-1.00.a";
			reg = <0xe000b000 0x1000>;
			interrupt-parent = <&gic>;
			interrupts = <0x0 0x16 0x0>;
			phy-handle = <&phy0>;

			phy0: phy@3 {
				compatible = "micrel,ksz9021";
				device_type = "ethernet-phy";
				reg = <0x3>;
			};
		};
		
		eth1: eth@e000c000 {
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			compatible = "xlnx,ps7-ethernet-1.00.a";
			reg = <0xE000C000 0x1000>;
			interrupt-parent = <&gic>;
			interrupts = <0 45 0>;
			phy-handle = <&phy1>;
			
			phy1: phy@7 {
				compatible = "marvell,88e1118";
				device_type = "ethernet-phy";
				reg = <7>;
			} ;
		};

		slcr@f8000000 {
			compatible = "xlnx,ps7-slcr-1.00.a";
			reg = <0xf8000000 0x1000>;
		};

		i2c@e0004000 {
			compatible = "xlnx,ps7-i2c-1.00.a";
			reg = <0xe0004000 0x1000>;
			interrupts = <0x0 0x19 0x0>;
			interrupt-parent = <&gic>;
			bus-id = <0x0>;
			input-clk = <0x69f6bc7>;
			i2c-clk = <0x186a0>;
			#address-cells = <0x1>;
			#size-cells = <0x0>;
			
			rtc@6F {
				compatible = "isl12022";
				reg = <0x6F>;
			}; 
			
		};

		usb@e0002000 {
			compatible = "xlnx,ps7-usb-1.00.a";
			reg = <0xe0002000 0x1000>;
			interrupts = <0x0 0x15 0x0>;
			interrupt-parent = <&gic>;
			dr_mode = "host";
			phy_type = "ulpi";
		};

		gpio@e000a000 {
			compatible = "xlnx,ps7-gpio-1.00.a";
			reg = <0xe000a000 0x1000>;
			interrupts = <0x0 0x14 0x0>;
			interrupt-parent = <&gic>;
		};

		nand@e1000000 {
			compatible = "xlnx,ps7-nand-1.00.a";
			reg = <0xe1000000 0x1000000 0xe000e000 0x1000>;
			#address-cells = <0x1>;
			#size-cells = <0x1>;

			partition@0 {
				label = "nand-linux";
				reg = <0x0 0x500000>;
			};
			
			partition@1 {
				label = "nand-device-tree";
				reg = <0x500000 0x100000>;
			};
			
			partition@2 {
				label = "nand-rootfs";
				reg = <0x600000 0xFA00000>;
			};
		};

		devcfg@f8007000 {
			compatible = "xlnx,ps7-dev-cfg-1.00.a";
			reg = <0xf8007000 0x100>;
			interrupts = <0x0 0x8 0x0>;
			interrupt-parent = <&gic>;
		};

		xadc@f8007100 {
			compatible = "xlnx,ps7-xadc-1.00.a";
			reg = <0xf8007100 0x20>;
			interrupts = <0x0 0x7 0x0>;
			interrupt-parent = <&gic>;
		};

	};
};
